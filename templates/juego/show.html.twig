{% extends 'base.html.twig' %}

{% block title %}Juego
{% endblock %}

{% block principal %}
	<div class="row">
		<div class="container col-lg-6" style="margin-top: 125px">
			<h1 class="text-center" style="margin-bottom: 25px">Game</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ juego.id }}</td>
					</tr>
					<tr>
						<th>Nombre</th>
						<td>{{ juego.nombre }}</td>
					</tr>
					<tr>
						<th>Descripcion</th>
						<td>{{ juego.descripcion }}</td>
					</tr>
					<tr>
						<th>Categoria</th>
						<td>{{ juego.categoria }}</td>
					</tr>
					<tr>
						<th>Precio</th>
						<td>{{ juego.precio }}</td>
					</tr>
					<tr>
						<th>Imagen</th>
						<td><img src="{{ asset('/images/juegos/' ~ juego.imagen) }}" style="height: 200px; width: 200px"</td>
					</tr>
					<tr>
						<th>NumDownloads</th>
						<td>{{ juego.numDownloads }}</td>
					</tr>
					<tr>
						<th>Rating</th>
						<td>{{ juego.rating }}</td>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<a class="btn btn-primary col-1 ms-3 mb-3" href="{{ path('app_games_edit', {'id': juego.id}) }}">Edit</a>
			</div>

			{{ include('juego/_delete_form.html.twig') }}

            <a href="{{ path('app_games') }}">Go back to games</a>
		</div>
	</div>
{% endblock %}
