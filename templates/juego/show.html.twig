{% extends 'base.html.twig' %}

{% block title %}Juego{% endblock %}

{% block principal %}
    <h1>Juego</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ juego.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ juego.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ juego.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ juego.precio }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ juego.imagen }}</td>
            </tr>
            <tr>
                <th>NumDownloads</th>
                <td>{{ juego.numDownloads }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ juego.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_games') }}">Volver a la lista</a>

    <a href="{{ path('app_games_edit', {'id': juego.id}) }}">Editar</a>

    {{ include('juego/_delete_form.html.twig') }}
{% endblock %}
